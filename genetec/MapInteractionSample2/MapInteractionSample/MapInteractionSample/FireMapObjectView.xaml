<maps:MapObjectView x:Class="MapInteractionSample.FireMapObjectView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:maps="clr-namespace:Genetec.Sdk.Workspace.Maps;assembly=Genetec.Sdk.Workspace"
                     Height="77" Width="64"
                     Margin="-24,-24,0,0"
                    x:Name="ctl">

  <maps:MapObjectView.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
  </maps:MapObjectView.Resources>

  <Grid>

    <Ellipse Margin="-500" 
             Stroke="#F1C50A" 
             StrokeThickness="0.3" 
             Height="10" 
             Width="10"
             IsHitTestVisible="False"
             Visibility="{Binding ElementName=ctl, Path=IsFireSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
      <Ellipse.LayoutTransform>
        <ScaleTransform ScaleX="10" 
                        ScaleY="10" />
      </Ellipse.LayoutTransform>
      <Ellipse.Fill>
        <RadialGradientBrush RadiusX="0.5" RadiusY="0.5">
          <GradientStop Color="#80F1C50A"/>
          <GradientStop Color="#00F1C50A" Offset="1"/>
        </RadialGradientBrush>
      </Ellipse.Fill>
    </Ellipse>

    <Image Source="Resources/FireIcon.png" MouseLeftButtonDown="OnFireImageMouseLeftButtonDown"/>

  </Grid>
</maps:MapObjectView>
